{
  "name": "naturescot-utils",
  "version": "1.4.0",
  "description": "Shared code between NatureScot applications",
  "homepage": "https://github.com/Scottish-Natural-Heritage/naturescot-utils#readme",
  "bugs": {
    "url": "https://github.com/Scottish-Natural-Heritage/naturescot-utils/issues"
  },
  "license": "(MIT OR OGL-UK-3.0 OR Apache-2.0)",
  "contributors": [
    "Mike Coats <mike.coats@nature.scot> (https://github.com/MikeCoats)",
    "Murray Holmes <murray.holmes@nature.scot> (https://github.com/murrayholmes96)",
    "Dominic Lynch <dominic.lynch@nature.scot> (https://github.com/finchie)"
  ],
  "type": "module",
  "files": [
    "**/*.js",
    "**/*.mjs",
    "**/*.d.ts",
    "!**/*.test.js",
    "!**/*.test.mjs",
    "**/*.md",
    "**/*.txt"
  ],
  "exports": "./index.mjs",
  "repository": "github:Scottish-Natural-Heritage/naturescot-utils",
  "scripts": {
    "lint": "cspell \"**/*.js\" \"package.json\" && xo",
    "test": "ava"
  },
  "dependencies": {
    "idna-uts46-hx": "^3.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "ava": "^4.3.3",
    "cspell": "^5.5.2",
    "eslint-plugin-editorconfig": "^4.0.2",
    "eslint-plugin-jsdoc": "^39.3.6",
    "prettier": "^2.3.0",
    "typescript": "^4.8.4",
    "xo": "^0.52.4"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "plugins": [
      "jsdoc",
      "editorconfig"
    ],
    "extends": [
      "plugin:jsdoc/recommended",
      "plugin:editorconfig/all"
    ],
    "rules": {
      "jsdoc/check-indentation": 1,
      "jsdoc/check-syntax": 1,
      "jsdoc/match-description": 1,
      "jsdoc/require-description": 1,
      "jsdoc/require-description-complete-sentence": 1,
      "unicorn/prefer-module": 0
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "trailingComma": "none"
  }
}
